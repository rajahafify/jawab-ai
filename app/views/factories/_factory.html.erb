<div id="<%= dom_id factory %>">
  <p>
    <strong>Name:</strong>
    <%= factory.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= factory.description %>
  </p>

  <p>
    <strong>Url:</strong>
    <%= factory.url %>
  </p>

  <% if factory.containers.present? %>
    <ul>
      <% factory.containers.each do |container| %>
        <li>
          <p>
            <%= link_to container.name,  [factory, container] %>
          </p>
          <p>
            <%= container.description %>
          </p>
          <p>
            Entries Count: <%= container.entries.count %>
          </p>
        </li>
      <% end %>
    </ul>
  <% end %>
  <%= link_to "Add new container", new_factory_container_path(factory) %>

  <% if factory.chats.present? %>
    <ul>
      <% factory.chats.each do |chat| %>
        <li>
          <p>
          <%= link_to "Chat ##{chat.id}", [factory, chat] %>
          </p>
        </li>
      <% end %>
    </ul>
  <% end %>
  <%= button_to "Add new chat", factory_chats_path(factory), method: :post %>
</div>
