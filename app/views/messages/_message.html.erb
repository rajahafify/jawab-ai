<div id="<%= dom_id(message) %>_messages">
  <% if message.user? %>
    <div class="bg-sky-400 rounded-lg m-8 text-white p-4">
      <%= message.role.titleize %>: <%= message.content %>, <%= time_ago_in_words message.created_at %>,
    </div>
  <% elsif message.assistant? %>
    <div class="bg-gray-200 rounded-lg m-8 p-4">
      <%= message.role.titleize %>: <%= message.content %>, <%= time_ago_in_words message.updated_at %>,
    </div>
  <% end %>
</div>
